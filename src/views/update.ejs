<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="create-user-container">
        <form action="/update-user" method="POST">
            <div><b> Update user</b>

            </div>
            <div>
                <label>First Name: </label>
                <input type="text" name="firstName" value="<%= dataUser.firstName %>" />
            </div>
            <div>
                <label>Last Name: </label>
                <input type="text" name="lastName" value="<%= dataUser.lastName %>" />
            </div>
            <div>
                <label>Email: </label>
                <input type=" email" name="email" value="<%= dataUser.email %>" />
            </div>
            <div>
                <label>Address: </label>
                <input type=" text" name="address" value="<%= dataUser.address %>" />
            </div>
            <input type=" text" name="id" hidden value="<%= dataUser.id %>" />
            <div>
                <button type=" submit" style="margin-top: 5px;cursor: pointer;"> Save</button>
            </div>

        </form>
    </div>

</body>

</html>